<!-- room.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Room: <%= roomId %></title>
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>Meeting Room: <%= roomId %></h1>
        <p>Welcome, <%= userName %></p>
    </header>

    <main>
        <!-- Video Section -->
        <div id="video-grid"></div>
        <video id="my-video" autoplay muted></video>

        <!-- Controls (Mute, Share Screen, etc.) -->
        <div id="controls">
            <button id="mute-audio">Mute Audio</button>
            <button id="mute-video">Mute Video</button>
            <button id="share-screen">Share Screen</button>
        </div>

        <!-- Chat Section -->
        <div id="chat-section">
            <h3>Chat</h3>
            <ul id="messages"></ul>
            <input id="chat-box" placeholder="Type your message..." />
            <button id="send">Send</button>
        </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
